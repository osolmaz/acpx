{
  "git": {
    "requireCleanWorkingDir": true,
    "requireBranch": "main",
    "commitMessage": "chore(release): ${version}",
    "tagName": "v${version}",
    "push": true
  },
  "npm": {
    "publish": true,
    "skipChecks": true
  },
  "github": {
    "release": true,
    "autoGenerate": true
  },
  "hooks": {
    "before:init": "npm run lint && npm run typecheck"
  }
}
